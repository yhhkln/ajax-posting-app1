<!DOCTYPE html>
<html>
  <head>
    <title>AjaxApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>

    <% if flash[:alert] %>
    <%= flash[:alert] %>
    <% end %>



    <%= link_to "jQuety1", jquery_1_path %> $$
    <%= link_to "jQuety2", jquery_2_path %> $$
    <%= link_to "jQuety3", jquery_3_path %> $$
    <%= link_to "jQuety4", jquery_4_path %> $$
    <%= link_to "jQuety5", jquery_5_path %> $$

    <% if current_user %>
      <%= link_to('登出', destroy_user_session_path, :method => :delete) %>
      <%= link_to('修改密码', edit_registration_path(:user)) %>
    <% else %>
      <%= link_to('注册', new_registration_path(:user))%>
      <%= link_to('登入',new_session_path(:user))%>
    <% end %>

    <%= yield %>
  </body>
</html>
